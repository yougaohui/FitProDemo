<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--未加载的进度区域-->
    <item android:id="@android:id/background">
        <shape>
            <!--进度条的圆角-->
            <corners android:radius="@dimen/watch_theme2_pb_radius" />
            <!--未加载的进度区域颜色-->
            <solid android:color="@color/watch_theme2_pb_normal_color"/>
        </shape>
    </item>
    <!--缓冲的进度的颜色，一般视频播放的缓冲区域-->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <!--进度条的圆角-->
                <corners android:radius="@dimen/watch_theme2_pb_radius" />
                <!--缓冲的进度的颜色，一般视频播放的缓冲进度-->
                <solid android:color="@color/watch_theme2_pb_normal_color"/>
            </shape>
        </clip>
    </item>
    <!--已经加载完的进度的区域-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!--进度条的圆角-->
                <corners android:radius="@dimen/watch_theme2_pb_radius" />
                <!--已经加载完的进度的颜色-->
                <solid android:color="@color/watch_theme2_pb_progress_color"/>
            </shape>
        </clip>
    </item>
</layer-list>