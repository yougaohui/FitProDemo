<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/background_shape"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:id="@+id/toolbar_back"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/title_return_icon" />

    </RelativeLayout>

    <xfkj.fitpro.view.RxRunTextView
        android:id="@+id/toolbar_title"
        style="@style/textview_marquee_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/title_bar_center_txt_color"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_20"
        android:padding="@dimen/dp_6"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_right"
        style="@style/yellow_around_btn_style"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/finish"
        android:textSize="15sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/img_btn_right"
        style="@style/include_title_right_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@mipmap/home_hh_add_icon"/>

    <TextView
        android:id="@+id/tv_finish"
        style="@style/include_title_right_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:textColor="@color/title_bar_ok_color"
        android:textSize="17sp"/>
</androidx.appcompat.widget.Toolbar>