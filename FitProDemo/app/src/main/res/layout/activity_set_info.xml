<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_color"
              android:orientation="vertical"
              tools:context="xfkj.fitpro.activity.SetInfoActivity">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_80"
        android:paddingTop="@dimen/dp_30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/boy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/set_user_info_male_1" />

        <ImageView
            android:id="@+id/girl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/set_user_info_female_0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lldata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:orientation="horizontal">

        <com.weigan.loopview.LoopView
            android:id="@+id/data_picker"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_340"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_50"
            android:textSize="@dimen/sp_20"
            app:awv_centerTextColor="@color/white"
            app:awv_dividerTextColor="@color/gray"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="5"
            app:awv_lineSpace="5"
            app:awv_textsize="35" />
    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/btn_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <Button
        android:id="@+id/sure_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_weight="1"
        android:background="@drawable/setinfo_btn_shape"
        android:text="@string/sure_update"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
    </LinearLayout>

</LinearLayout>
