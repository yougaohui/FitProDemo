<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_Left"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/sb1" />

    <TextView
        android:id="@+id/labMenuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_Left"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="菜单名称"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#333333"
        />

    <com.zcw.togglebutton.ToggleButton
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        toggle:tbBorderWidth="2dp"
        toggle:tbOffBorderColor="@color/gray"
        toggle:tbOffColor="@color/gray"
        toggle:tbOnColor="@color/green_two"
        />

    <View
        android:id="@+id/hline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/labMenuName"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/search_line_gray2"
        />
</RelativeLayout>
