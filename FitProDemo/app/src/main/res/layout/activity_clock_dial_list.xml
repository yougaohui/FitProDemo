<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/clock_dial_bg_color"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/TabLayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="43dp"
        android:background="@color/clock_dial_tab_bg_color"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/clock_tab_indicat_color"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/clock_tab_selected_color"
        app:tabTextColor="@color/textColorBlack" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
