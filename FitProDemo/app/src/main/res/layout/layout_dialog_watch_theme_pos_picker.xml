<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/replace_watch_theme" />

    <RadioGroup
        android:id="@+id/rad_group"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/shape_corner_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_weight="1"
            android:background="@drawable/shape_health_report_remt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/watch_theme_ok_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/ok" />
    </LinearLayout>
</LinearLayout>